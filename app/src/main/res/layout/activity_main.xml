<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#1221A5"
            android:padding="10dp"
            app:srcCompat="@mipmap/menu"
            app:tint="#F8F8F8" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:background="#1221A5"
            android:padding="10dp"
            android:text="Booking.com"
            android:textAlignment="gravity"
            android:textColor="#F8F8F8"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#1221A5"
            android:padding="10dp"
            app:tint="#F8F8F8"
            app:srcCompat="@mipmap/campana" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ayuda relacionada con el coronavirus \n(COVID-19)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.1dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                app:srcCompat="@mipmap/casa" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                app:srcCompat="@mipmap/coche" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                app:srcCompat="@mipmap/avion" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="   Alojamiento"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="   Alquiler de coches"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity=""
                android:text="       Vuelos"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/holteles_hostales_albergues_y_m_s"
            android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFCA28"
        android:padding="3dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:layout_marginBottom="2.5dp"
           android:drawableLeft="@drawable/ic_lupa"
            android:hint="fatima"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:layout_marginBottom="2.5dp"
            android:drawableLeft="@drawable/ic_calendario"
            android:hint="28/10/2020"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:layout_marginBottom="2.5dp"
            android:drawableLeft="@drawable/ic_usuario"
            android:hint="1 habitación"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1221A5"
            android:textColor="#F8F8F8"
            android:layout_marginBottom="2.5dp"
            android:textSize="20dp"
            android:text="Buscar"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ofertas de hoy"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="223dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:srcCompat="@mipmap/amsterdam" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oferta de viaje"
            android:textColor="#000000"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahorra 15% o más del 01/06 al 04/01"/>
    </LinearLayout>


</TableLayout>
